<Window x:Class="RentAPark.Presentation.Windows.SelectParkByLocation"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RentAPark.Presentation.Windows"
        mc:Ignorable="d"
        Title="SelectParkByLocation" Height="450" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <Label Content="Select location" HorizontalAlignment="Center"  FontSize="32" FontWeight="Bold" Margin="20" />
        <StackPanel Grid.Row="1" HorizontalAlignment="Center">
            <Label Content="Choose a city:" HorizontalContentAlignment="Center"/>
            <ComboBox x:Name="CityComboBox" Width="250" Margin="5"/>

        </StackPanel>
        <Button Grid.Row="2" x:Name="SelectButton" Content="Select City" Click="SelectButton_Click"
        Padding="5" Margin="20" VerticalContentAlignment="Bottom"/>
    </Grid>
</Window>
